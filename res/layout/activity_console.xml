<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.github.legendofmcpe.pocketbot.android.ConsoleActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView android:id="@+id/console_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/console_console"
                android:singleLine="false"
                android:ellipsize="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText android:id="@+id/console_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/console_input_hint" />
        <Button android:id="@+id/console_send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/console_send" />
    </LinearLayout>
</LinearLayout>
